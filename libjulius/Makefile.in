SHELL=/bin/sh
.SUFFIXES:
.SUFFIXES: .c .o
.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) -o $@ -c $<

LIBSENT=../libsent
CC=@CC@
CFLAGS=@CFLAGS@
CPPFLAGS=-Iinclude -I$(LIBSENT)/include @CPPFLAGS@ `$(LIBSENT)/libsent-config --cflags`
LDFLAGS=@LDFLAGS@ -L$(LIBSENT) -lsent @LIBS@ `$(LIBSENT)/libsent-config --libs` -lm 
RM=@RM@ -f
AR=@AR@ r
RANLIB=@RANLIB@


############################################################

TARGET = libjulius.a

OBJ = \
src/recogmain.o \
src/default.o \
src/jfunc.o \
src/callback.o \
src/useropt.o \
src/m_usage.o \
src/m_options.o \
src/m_jconf.o \
src/m_chkparam.o \
src/m_info.o \
src/m_fusion.o \
src/hmm_check.o \
src/multi-gram.o \
src/wchmm.o \
src/wchmm_check.o \
src/m_adin.o \
src/adin-cut.o \
src/wav2mfcc.o \
src/beam.o \
src/realtime-1stpass.o \
src/factoring_sub.o \
src/outprob_style.o \
src/backtrellis.o \
src/search_bestfirst_main.o \
src/search_bestfirst_v1.o \
src/search_bestfirst_v2.o \
src/ngram_decode.o \
src/dfa_decode.o \
src/graphout.o \
src/confnet.o \
src/gmm.o \
src/word_align.o \
src/version.o

############################################################

all: $(TARGET)

$(TARGET): $(LIBSENT)/libsent.a $(OBJ)
	$(AR) $@ $?
	$(RANLIB) $@

############################################################

install: $(TARGET)
	echo nothing to be installed for libjulius.

install.bin: $(TARGET)
	echo nothing to be installed for libjulius.

install.man:
	echo nothing to be installed for libjulius.

install.man.ja:
	echo nothing to be installed for libjulius.

depend:
	makedepend -- $(CFLAGS) -- $(OBJSENT)

clean:
	$(RM) *.bak *~ core TAGS
	$(RM) src/*.o src/*.bak src/*~ src/core src/TAGS
	$(RM) include/julius/*~
	$(RM) config.log config.cache

distclean:
	$(RM) *.bak *~ core TAGS
	$(RM) src/*.o src/*.bak src/*~ src/core src/TAGS
	$(RM) include/julius/*~
	$(RM) config.log config.cache
	$(RM) $(TARGET)
	$(RM) src/version.c
	$(RM) libjulius-config
	$(RM) config.status include/julius/config.h
	$(RM) Makefile

############################################################
configure:
	autoconf
	$(RM) include/julius/config.h.in
	autoheader

doxygen:
	echo "PROJECT_NAME=@PRODUCTNAME@" >> ../support/doxygen.conf.en
	echo "PROJECT_NAME=@PRODUCTNAME@" >> ../support/doxygen.conf.ja
	echo "PROJECT_NUMBER=@VERSION@" >> ../support/doxygen.conf.en
	echo "PROJECT_NUMBER=@VERSION@" >> ../support/doxygen.conf.ja
